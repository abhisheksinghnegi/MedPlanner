<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meddetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Medicine"
        android:textSize="21dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <EditText
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medicine Name" />

            <EditText
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About Medicine" />

            <LinearLayout
                android:id="@+id/medicine_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MEDICINE_COLOR"
                    android:textSize="@dimen/_14sdp" />
                <!--<TextView-->
                <!--android:id="@+id/med_color"-->
                <!--android:layout_width="241dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:paddingEnd="7dp"-->
                <!--android:text="NULL"-->
                <!--android:textAlignment="textEnd"-->
                <!--android:textSize="@dimen/_14sdp" />-->
                <ImageView
                    android:id="@+id/color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="#eeee"
                    android:padding="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/medicine_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MEDICINE TYPE"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/what_medicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Capsule"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="21dp"
            android:text="Set Alarm" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="7dp">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/remainderRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>



    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/remainder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SET REMINDER" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Repeat Alarm"
            android:textSize="21dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:padding="10dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_saturday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_monday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:fabSize="mini"
                android:src="@drawable/ic_tuesday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:fabSize="mini"
                android:src="@drawable/ic_wednesday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/thrusday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:fabSize="mini"
                android:src="@drawable/ic_tuesday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:fabSize="mini"
                android:src="@drawable/ic_friday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/saturady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:fabSize="mini"
                android:src="@drawable/ic_saturday"
                android:backgroundTint="@color/darkgrey"
                app:borderWidth="4dp"
                app:elevation="6dp"/>
        </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="submit" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>